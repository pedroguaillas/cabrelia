---
import categories from "../data/data.ts";
---

<section class="container mx-auto py-20 px-6">
  <div class="text-center mb-14" data-reveal>
    <p class="text-[11px] tracking-[0.3em] uppercase text-cabrelia-muted mb-3">Explora</p>
    <h2 class="text-4xl sm:text-5xl md:text-6xl font-serif italic text-indigo-950 opacity-90 tracking-tighter leading-none">
      Categor√≠as
    </h2>
  </div>

  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 gap-4" data-stagger>
    {categories.map((cat: { name: string; description: string }, i: number) => (
      <a
        href={`#${cat.name.toLowerCase()}`}
        data-reveal
        class:list={[
          "group relative flex flex-col items-center justify-center text-center py-10 px-6 rounded-2xl border border-indigo-950/10 transition-all duration-500 hover:bg-indigo-950 hover:border-indigo-950 hover:scale-[1.03] hover:shadow-lg",
          i === 0 && "col-span-2 md:col-span-1",
        ]}
      >
        <h3 class="text-lg font-serif italic text-indigo-950 group-hover:text-white transition-colors duration-500">
          {cat.name}
        </h3>
        <p class="text-[10px] tracking-wider uppercase text-cabrelia-muted group-hover:text-white/60 mt-2 transition-colors duration-500 max-w-[180px]">
          {cat.description}
        </p>
        <span class="mt-4 text-indigo-950/30 group-hover:text-white/50 group-hover:translate-x-1 transition-all duration-500 text-xl">
          &rarr;
        </span>
      </a>
    ))}
  </div>
</section>
